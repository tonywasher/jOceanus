<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.sourceforge.joceanus</groupId>
        <artifactId>jmoneywise</artifactId>
        <version>1.6.3-b1</version>
    </parent>
    <artifactId>jmoneywise-javafx</artifactId>
    <name>MoneyWise Personal Finance - javaFX</name>
    <description>Personal Finance Application</description>
    <dependencies>
        <dependency>
            <groupId>net.sourceforge.joceanus</groupId>
            <artifactId>jmoneywise-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>jprometheus-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.joceanus</groupId>
            <artifactId>jmetis-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>jgordianknot-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.joceanus</groupId>
            <artifactId>jtethys-javafx</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <properties>
        <moduleName>${packageName}.javafx</moduleName>
        <packageMain>${packageName}.ui.javafx.MoneyWise4FX</packageMain>
        <packagePreLoader>${packageName}.ui.javafx.MoneyWiseFXpreLoader</packagePreLoader>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <JavaFX-Preloader-Class>${packagePreLoader}</JavaFX-Preloader-Class>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
