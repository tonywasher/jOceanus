<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sourceforge.joceanus</groupId>
  <artifactId>joceanus</artifactId>
  <version>v1.3.0-SNAPSHOT</version>
  <name>Java Oceanus package</name>
  <description>Parent project for jOceanus</description>
  <inceptionYear>2012</inceptionYear>
  <url>http://joceanus.sourceforge.net/staging/</url>
  <packaging>pom</packaging>
  <modules>
    <module>jmoneywise</module>
    <module>jthemis</module>
    <module>jprometheus</module>
    <module>jmetis</module>
    <module>jgordianknot</module>
    <module>jtethys</module>
  </modules>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>manual</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>tony</id>
      <name>${MyName}</name>
      <email>Tony.Washer@yahoo.co.uk</email>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
    </developer>
  </developers>
  <issueManagement>
    <system>Jira</system>
    <url>http://${svnHost}:8080/</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:http://${svnHost}/svn/${svnRepository}/${svnBase}</connection>
    <developerConnection>scm:svn:https://${svnHost}/svn/${svnRepository}/${svnBase}</developerConnection>
    <tag>HEAD</tag>
    <url>http://${svnHost}/viewvc/${svnRepository}/${svnBase}</url>
  </scm>
  <distributionManagement>
    <site>
      <id>jOceanus.website</id>
      <name>JOceanus Website</name>
      <url>scp://shell.sourceforge.net/home/project-web/joceanus/htdocs/</url>
    </site>
  </distributionManagement>
  <properties>
    <MyName>Tony Washer</MyName>
    <currentYear>${maven.build.timestamp}</currentYear>
    <maven.build.timestamp.format>yyyy</maven.build.timestamp.format>
    <project.build.sourceEncoding>Cp1252</project.build.sourceEncoding>
    <svnHost>Tony-HP</svnHost>
    <svnRepository>Finance</svnRepository>
    <svnParent>jOceanus</svnParent>
    <svnComponent>${svnParent}</svnComponent>
    <svnBranch>v1.3.0</svnBranch>
    <svnTag>SNAPSHOT</svnTag>
    <svnBase>${svnParent}/trunk</svnBase>
    <packageKey>net.sourceforge.joceanus</packageKey>
    <packageMain/>
    <appLibDir/>
    <JDateButtonVersion>v1.3.0-SNAPSHOT</JDateButtonVersion>
    <BouncyCastleVersion>1.51</BouncyCastleVersion>
    <SvnKitVersion>1.8.6</SvnKitVersion>
    <JGitVersion>3.5.0.201409260305-r</JGitVersion>
    <JiraRestVersion>2.0.0-m31</JiraRestVersion>
    <ApacheMavenVersion>3.2.3</ApacheMavenVersion>
    <MySQLVersion>5.1.30</MySQLVersion>
    <PostGreSQLVersion>9.2-1003-jdbc4</PostGreSQLVersion>
    <ApachePOIVersion>3.10-FINAL</ApachePOIVersion>
    <ApacheODFDOMVersion>0.7-incubating</ApacheODFDOMVersion>
    <XercesVersion>2.9.1</XercesVersion>
    <SLF4JVersion>1.7.7</SLF4JVersion>
    <LOG4JVersion>2.0.2</LOG4JVersion>
    <ZipSDKVersion>9.20</ZipSDKVersion>
  </properties>
  <repositories>
    <repository>
      <id>svnkit</id>
      <name>SubVersion Repository</name>
      <url>http://maven.tmatesoft.com/content/repositories/releases/</url>
    </repository>
    <repository>
      <id>atlassian-public</id>
      <name>Atlassian Repository</name>
      <url>https://m2proxy.atlassian.com/repository/public</url>
    </repository>
    <repository>
      <id>jgit-repository</id>
      <url>https://repo.eclipse.org/content/groups/releases/</url>
    </repository>
  </repositories>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <compilerArgument>-Xlint:unchecked</compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>2.4</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>buildnumber-maven-plugin</artifactId>
          <version>1.3</version>
          <executions>
            <execution>
              <phase>validate</phase>
              <goals>
                <goal>create</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <timestampFormat>{0,date,medium} {0,time,short}</timestampFormat>
            <doCheck>false</doCheck>
            <doUpdate>false</doUpdate>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>2.9</version>
          <executions>
            <execution>
              <id>copy-installed</id>
              <phase>install</phase>
              <goals>
                <goal>copy</goal>
              </goals>
              <configuration>
                <artifactItems>
                  <artifactItem>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <version>${project.version}</version>
                    <type>${project.packaging}</type>
                  </artifactItem>
                </artifactItems>
                <outputDirectory>${appDir}</outputDirectory>
              </configuration>
            </execution>
            <execution>
              <id>copy-dependencies</id>
              <phase>install</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <outputDirectory>${appDir}${appLibDir}</outputDirectory>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.3</version>
          <configuration>
            <finalName>${project.artifactId}-${project.version}-uber</finalName>
          </configuration>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.5</version>
          <configuration>
            <archive>
              <manifest>
   	        <mainClass>${packageMain}</mainClass>
                <packageName>${packageName}</packageName>
                <addClasspath>true</addClasspath>
                <classpathPrefix>${appLibDir}</classpathPrefix>                                                                      
                <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              </manifest>
              <manifestEntries>
                <Revision>${svnRepository}-r${buildNumber}</Revision>
                <SplashScreen-Image>${packageSplash}</SplashScreen-Image>
              </manifestEntries>
            </archive>
          </configuration>
        </plugin>
      </plugins>
     </pluginManagement>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.7</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.13</version>
        <configuration>
          <configLocation>src/main/checkstyle/checks.xml</configLocation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>3.2</version>
        <configuration>
           <linkXref>true</linkXref>
           <aggregate>true</aggregate>
           <targetJdk>1.8</targetJdk>
           <excludes>
               <exclude>**/SevenZip/**/*.java</exclude>
           </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.4</version>
        <configuration>
            <linkJavadoc>true</linkJavadoc>
            <aggregate>true</aggregate>
            <excludes>
              <exclude>**/SevenZip/**/*.java</exclude>
            </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10</version>
        <configuration>
          <show>public</show>
          <aggregate>true</aggregate>
          <nohelp>true</nohelp>
          <excludePackageNames>SevenZip*</excludePackageNames>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>