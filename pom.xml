<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sourceforge.jOceanus</groupId>
  <artifactId>jOceanus</artifactId>
  <version>v1.1.0-SNAPSHOT</version>
  <name>Java Oceanus package</name>
  <description>Parent project for jOceanus</description>
  <inceptionYear>2012</inceptionYear>
  <url>http://sourceforge.net/projects/joceanus/site/</url>
  <packaging>pom</packaging>
  <modules>
    <module>jMoneyWise</module>
    <module>jDataModels</module>
    <module>jSvnManager</module>
    <module>jJira</module>
    <module>jGordianKnot</module>
    <module>jDataManager</module>
    <module>jSortedList</module>
    <module>jDecimal</module>
    <module>jDateDay</module>
    <module>jTableFilter</module>
    <module>jHelpManager</module>
    <module>jEventManager</module>
    <module>jFieldSet</module>
    <module>jPreferenceSet</module>
  </modules>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>manual</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>tony</id>
      <name>Tony Washer</name>
      <email>Tony.Washer@yahoo.co.uk</email>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
    </developer>
  </developers>
  <issueManagement>
    <system>Jira</system>
    <url>http://${svnHost}:8080/</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:http://${svnHost}/svn/${svnRepository}/${svnComponent}</connection>
    <developerConnection>scm:svn:https://${svnHost}/svn/${svnRepository}/${svnComponent}</developerConnection>
    <tag>HEAD</tag>
    <url>http://${svnHost}/viewvc/${svnRepository}/${svnBase}</url>
  </scm>
  <distributionManagement>
    <site>
      <id>jOceanus.website</id>
      <name>JOceanus Website</name>
      <url>scp://shell.sourceforge.net/home/project-web/joceanus/htdocs/</url>
    </site>
  </distributionManagement>
  <properties>
    <project.build.sourceEncoding>Cp1252</project.build.sourceEncoding>
    <svnHost>Tony-HP</svnHost>
    <svnRepository>Finance</svnRepository>
    <svnParent>jOceanus</svnParent>
    <svnComponent>${svnParent}</svnComponent>
    <svnBranch>v1.0.0</svnBranch>
    <svnTag>SNAPSHOT</svnTag>
    <svnBase>${svnParent}/trunk</svnBase>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>buildnumber-maven-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>validate</phase>
              <goals>
                <goal>create</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <doCheck>false</doCheck>
            <doUpdate>false</doUpdate>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.5.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
          <configLocation>src/main/checkstyle/checks.xml</configLocation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>2.7.1</version>
        <configuration>
           <targetJdk>1.7</targetJdk>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <show>public</show>
          <nohelp>true</nohelp>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>