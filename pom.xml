<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sourceforge.joceanus</groupId>
  <artifactId>joceanus</artifactId>
  <version>v1.2.1-SNAPSHOT</version>
  <name>Java Oceanus package</name>
  <description>Parent project for jOceanus</description>
  <inceptionYear>2012</inceptionYear>
  <url>http://joceanus.sourceforge.net/staging/</url>
  <packaging>pom</packaging>
  <modules>
    <module>jmoneywise</module>
    <module>jthemis</module>
    <module>jprometheus</module>
    <module>jmetis</module>
    <module>jgordianknot</module>
    <module>jtethys</module>
  </modules>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>manual</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>tony</id>
      <name>Tony Washer</name>
      <email>Tony.Washer@yahoo.co.uk</email>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
    </developer>
  </developers>
  <issueManagement>
    <system>Jira</system>
    <url>http://${svnHost}:8080/</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:http://${svnHost}/svn/${svnRepository}/${svnBase}</connection>
    <developerConnection>scm:svn:https://${svnHost}/svn/${svnRepository}/${svnBase}</developerConnection>
    <tag>HEAD</tag>
    <url>http://${svnHost}/viewvc/${svnRepository}/${svnBase}</url>
  </scm>
  <distributionManagement>
    <site>
      <id>jOceanus.website</id>
      <name>JOceanus Website</name>
      <url>scp://shell.sourceforge.net/home/project-web/joceanus/htdocs/</url>
    </site>
  </distributionManagement>
  <properties>
    <project.build.sourceEncoding>Cp1252</project.build.sourceEncoding>
    <svnHost>Tony-HP</svnHost>
    <svnRepository>Finance</svnRepository>
    <svnParent>jOceanus</svnParent>
    <svnComponent>${svnParent}</svnComponent>
    <svnBranch>v1.2.1</svnBranch>
    <svnTag>SNAPSHOT</svnTag>
    <svnBase>${svnParent}/trunk</svnBase>
    <packageKey>net.sourceforge.joceanus</packageKey>
    <packageMain/>
    <appLibDir/>
    <JDateButtonVersion>v1.2.0-b2</JDateButtonVersion>
    <BouncyCastleVersion>1.50</BouncyCastleVersion>
    <SvnKitVersion>1.8.3</SvnKitVersion>
    <JGitVersion>3.2.0.201312181205-r</JGitVersion>
    <JiraRestVersion>2.0.0-m25</JiraRestVersion>
    <ApacheMavenVersion>3.1.1</ApacheMavenVersion>
    <PostGreSQLVersion>9.2-1003-jdbc4</PostGreSQLVersion>
    <ApachePOIVersion>3.9</ApachePOIVersion>
    <ApacheODFDOMVersion>0.7-incubating</ApacheODFDOMVersion>
    <XercesVersion>2.9.1</XercesVersion>
    <ZipSDKVersion>9.20</ZipSDKVersion>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.16</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>2.1</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>buildnumber-maven-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>validate</phase>
              <goals>
                <goal>create</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <timestampFormat>{0,date,medium} {0,time,short}</timestampFormat>
            <doCheck>false</doCheck>
            <doUpdate>false</doUpdate>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>2.8</version>
          <executions>
            <execution>
              <id>copy-installed</id>
              <phase>install</phase>
              <goals>
                <goal>copy</goal>
              </goals>
              <configuration>
                <artifactItems>
                  <artifactItem>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <version>${project.version}</version>
                    <type>${project.packaging}</type>
                  </artifactItem>
                </artifactItems>
                <outputDirectory>${appDir}</outputDirectory>
              </configuration>
            </execution>
            <execution>
              <id>copy-dependencies</id>
              <phase>install</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <outputDirectory>${appDir}${appLibDir}</outputDirectory>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.2</version>
          <configuration>
            <finalName>${project.artifactId}-${project.version}-uber</finalName>
          </configuration>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.4</version>
          <configuration>
            <archive>
              <manifest>
   	        <mainClass>${packageMain}</mainClass>
                <packageName>${packageName}</packageName>
                <addClasspath>true</addClasspath>
                <classpathPrefix>${appLibDir}</classpathPrefix>                                                                      
                <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              </manifest>
              <manifestEntries>
                <Revision>${svnRepository}-r${buildNumber}</Revision>
              </manifestEntries>
            </archive>
          </configuration>
        </plugin>
      </plugins>
     </pluginManagement>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.7</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.11</version>
        <configuration>
          <configLocation>src/main/checkstyle/checks.xml</configLocation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>3.0.1</version>
        <configuration>
           <linkXref>true</linkXref>
           <aggregate>true</aggregate>
           <targetJdk>1.7</targetJdk>
           <excludes>
               <exclude>**/jira/soap/*.java</exclude>
               <exclude>**/SevenZip/**/*.java</exclude>
           </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.4</version>
        <configuration>
            <linkJavadoc>true</linkJavadoc>
            <aggregate>true</aggregate>
            <excludes>
               <exclude>**/jira/soap/*.java</exclude>
               <exclude>**/SevenZip/**/*.java</exclude>
            </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
          <show>public</show>
          <aggregate>true</aggregate>
          <nohelp>true</nohelp>
          <excludePackageNames>*.jira.soap.*:SevenZip*</excludePackageNames>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>